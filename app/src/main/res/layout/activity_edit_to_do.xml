<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4E4E4E"
    tools:context=".TodoHomeActivity">


    <ImageView
        android:id="@+id/imageViewss5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="450dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back2" />

    <TextView
        android:id="@+id/titlepage"
        android:layout_width="204dp"
        android:layout_height="108dp"
        android:layout_marginTop="68dp"
        android:text="Edit ToDo"
        android:textColor="#ffffff"
        android:textFontWeight="900"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.082"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/addtitle"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginTop="32dp"
        android:text="Add Title"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titlepage" />

    <EditText
        android:id="@+id/titledoes"
        android:layout_width="349dp"
        android:layout_height="63dp"
        android:hint="Task Name"
        android:inputType="text"
        android:textColor="#080101"
        android:textColorHint="#080101"
        android:textFontWeight="800"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.258"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addtitle" />

    <TextView
        android:id="@+id/adddesc"
        android:layout_width="102dp"
        android:layout_height="22dp"
        android:layout_marginTop="24dp"
        android:text="Description"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titledoes" />

    <EditText
        android:id="@+id/descdoes"
        android:layout_width="357dp"
        android:layout_height="122dp"
        android:hint="Task Description"
        android:inputType="text"
        android:maxLength="50"
        android:textColor="#080101"
        android:textFontWeight="800"
        android:textColorHint="#080101"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.274"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adddesc" />

    <TextView
        android:id="@+id/adddate"
        android:layout_width="102dp"
        android:layout_height="22dp"
        android:layout_marginTop="24dp"
        android:text="Schedule"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.055"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descdoes" />

    <EditText
        android:id="@+id/datedoes"
        android:layout_width="349dp"
        android:layout_height="63dp"
        android:hint="Date and Time"
        android:inputType="text"
        android:textColor="#080101"
        android:textColorHint="#080101"
        android:textFontWeight="800"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.258"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adddate" />

    <Button
        android:id="@+id/btnupdate"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/createbtnback"
        android:text="Update"
        android:textAllCaps="false"
        android:textColor="#080101"
        android:textFontWeight="800"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/datedoes" />

    <Button
        android:id="@+id/btndelete"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/createbtnback"
        android:text="Delete"
        android:textAllCaps="false"
        android:textColor="#080101"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnupdate" />


</androidx.constraintlayout.widget.ConstraintLayout>